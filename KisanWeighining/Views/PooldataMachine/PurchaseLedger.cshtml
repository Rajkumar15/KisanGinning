                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row clearfix">
        <div class="col-sm-12 col-lg-12 col-md-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>
                        Purchase List
                    </h2>
                </div>
                <div class="body">
                    <div class="row clearfix">
                        <div class="col-sm-12" id="bin">

                        </div>                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<link href="~/assets/css/select2.min.css" rel="stylesheet" />
<script src="~/assets/js/select2.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
       
        $("#ex").hide();
        $('select').select2();  
        $("#frdt").datepicker();
        $("#todt").datepicker();
        $("#ldg").click(function () {
            var frid = $("#farid").val();
            var drid = $("#drid").val();
            var frdt = $("#frdt").val();
            var todt = $("#todt").val();
            if (frdt != "" && todt == "") {
                jAlert("Select To date also", "System alert");
            }
            else if (frdt == "" && todt != "") {
                jAlert("Select from date also", "System alert");
            }
            else {
                var url = '@Url.Action("ledger", "PooldataMachine")' + '?frid=' + frid + '&drid=' + drid + '&frdt=' + frdt + '&todt=' + todt;
                $.post(url, "", function (data) {
                    $("#bin").html('');
                    if (data != "") {
                        $("#bin").append(data);
                        $("#ex").show();
                    } else {
                        jAlert('Error has occurred', 'System Alert');
                    }
                });
            }
        })

        $("img").click(function () {
