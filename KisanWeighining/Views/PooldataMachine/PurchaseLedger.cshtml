                                    <label class="labelmod"> Farmer Name </label> : @Html.DropDownListFor(x => x.farid, (IEnumerable<SelectListItem>)@ViewBag.farmer, "Select Farmer", new { @style = "width: 45% !important;height: 35px;margin-bottom:2%;" })<br />
